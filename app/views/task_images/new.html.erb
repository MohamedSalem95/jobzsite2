<div class="row">
  <div class="col text-right">
    <h4>اضافه صوره للعمل </h4>
    <%= form_with model: [@task, @task_image], local: true do |form| %>

      <div class="form-group">
        <%= form.label :image, 'الصوره*' %>
        <%= form.file_field :image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :caption, 'كابشن' %>
        <%= form.text_field :caption, class: 'form-control', placeholder: 'وصف الصوره .....' %>
      </div>

      <%= form.submit 'اضافه', class: 'btn btn-success' %>

    <% end %>
  </div>
</div>
