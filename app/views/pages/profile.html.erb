<div class="row">

  <div class="col col-2">
    <% if @user.image.medium.nil? %>
      <%= image_tag 'profile.jpg', class: 'img-thumbnail' %>
    <% else %>
      <%= image_tag @user.image.medium.url, class: 'img-thumbnail' %>
    <% end %>
  </div>

  <div class="col col-10">
    <div class="jumbotron">
      <h4 class="text-right"> <%= "#{@user.first_name} #{@user.last_name}" %> </h4>
      <% if !@user.bio.nil? %>
        <p class="text-muted text-right">
          <%= @user.bio %>
        </p>
      <% else %>
        <p class="text-right">
          <b> no bio </b>
        </p>
      <% end %>
    </div>

    <%= render 'tasks/task_list', {tasks: @user.tasks.latest, user: @user}  %>
  </div>

</div>
