<h4 class="text-right text-muted"> انشاء حساب جديد </h4>

<div class="row">
  <div class="col col-6 text-right">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, 'الايميل*', class: 'text-right' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'الايميل ...' %>
      </div>

      <div class="form-group">
        <%= f.label :first_name, 'الاسم الاول*', class: 'text-right' %><br />
        <%= f.text_field :first_name, class: 'form-control', placeholder: 'الاسم الاول ..' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, 'اسم العائله*', class: 'text-right' %><br />
        <%= f.text_field :last_name, class: 'form-control', placeholder: 'اسم العائله ....' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, 'تكلم عن نفسك', class: 'text-right' %><br />
        <%= f.text_area :bio, class: 'form-control', placeholder: 'تكلم عن نفسك' %>
      </div>


      <div class="form-group">
        <%= f.label :image, 'الصوره الشخصيه', class: 'text-right' %><br />
        <%= f.file_field :image, class: 'form-control' %>
      </div>



      <div class="form-group">
        <%= f.label :password, 'كلمه المرور*', class: 'text-right' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'كلمه المرور ...' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'تاكيد كلمه المرور*', class: 'text-right' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'تاكيد كلمه الكرور ...' %>
      </div>

      <div class="actions">
        <%= f.submit "انشاء الحساب", class: 'btn btn-success' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>



  </div>

  <div class="col col-6">
    <%= image_tag 'register.jpg', class: 'img-fluid' %>
  </div>
</div>
