

<div class="row">
  <div class="col col-6 text-right">
    <h4 class="text-muted"> تسجيل الدخول </h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'الايميل' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'الايميل ...' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'كلمه المرور' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'كلمه المرور ....' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "تسجيل الدخول", class: 'btn btn-success' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="col col-6">
    <%= image_tag 'login.jpg', class: 'img-fluid' %>
  </div>
</div>
